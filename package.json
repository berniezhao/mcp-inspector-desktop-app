{
  "name": "mcp-inspector-desktop",
  "version": "0.1.0",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack",
    "dev": "npm run build && electron .",
    "type-check": "tsc --noEmit",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "@modelcontextprotocol/inspector": "0.11.0",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^22.15.18",
    "@types/wait-on": "^5.3.4",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "wait-on": "*"
  },
  "build": {
    "asarUnpack": [
      "node_modules/@modelcontextprotocol/inspector/dist/**"
    ],
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
